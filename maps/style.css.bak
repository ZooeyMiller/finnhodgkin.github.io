/*
Style Name: GI Interactive Map
Author: Finn Hodgkin
*/
body{
	font-family: 'Lucida Grande', sans-serif;
	padding: 0px;
	margin: 0px;
	color: #272e35;
}
#map{
	width: 98%;
}
#topBar{
	width: 100%;
	border-bottom: 1px solid #dfdfdf;
	background-color: #fff;
	height: 22px;
	margin-bottom: 10px;
}
#title{
	float: left;
	padding-left: 10px;
	padding-top: 3px;
	font-size: 13px;
}
#return{
	float: right;
	padding-right: 10px;
	padding-top: 3px;
	font-size: 12px;
}
#return a{
	color: #272e35;
}
h1{
	font-size: 14px;
	margin: -15px -15px 0px -15px;
	padding: 15px 10px 2px 15px;
	background-color: rgba(240,240,255,0.7);
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	font-weight: 300;
}
#subtitle{
	font-size: 13px;
	margin: 0px -15px 10px -15px;
	padding: 0px 10px 12px 15px;
	font-weight: 300;
	color: #085cbe;
	background-color: rgba(240,240,255,0.7);
}
h2{
	font-size: 13px;
	color: #085cbe;
	margin: 8px 0 8px 0;
	font-weight: 300;
}
#description{
	font-size: 12px;
	margin-top: 5px;
	margin-bottom: 3px;
}
#key{ 
	margin-left: 5px;
	margin-bottom: 10px; 
	margin-top: 120px;
	width: 275px;
	z-index: 6;
	background-color: rgba(255,255,255,0.7);
	border-radius: 5px;
	padding: 15px;
	background-image: url("move.png");
	background-repeat: no-repeat;
    background-position: 265px 17px; 
	border: solid 1px #bbc4ce;
}
svg{
	z-index: 1;
}
#keys{
	width: 275px;
	height: 85px;
	margin: 0;
	padding: 0;
}
#keyColors{
	float: left;
	width: 16px;
	margin-right: 9px;
}
.keybox{
	background-color:#e67272; 
	float: left; 
	border-radius: 3px; 
	border: 1px solid #25383C; 
	width: 15px; 
	height: 15px; 
	margin-top: 3px; 
	margin-right: 10px;
}
.keytext{
	float: right; 
	height: 15px; 
	font-family: 'Lucida Grande', sans-serif; 
	margin-top: 6px; 
	font-size:12px;
	width: 247px;
	line-height: 19.5px;
}

#controls{
	width: 20px;
	margin-left: 30px;
	margin-top: 15px;
	z-index: 7;
	position:absolute;
}
#up{
	color: white;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
	background: rgb(66, 184, 221);
	text-decoration: none;
	font-size: 25px;
	font-weight: 600;
	width: 40px;
	text-align: center;
	float: left;
	z-index: 7;
}
#down{
	color: white;
    border-bottom-left-radius: 15px;
    border-bottom-right-radius: 15px;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
	background: rgb(66, 184, 221);
	text-decoration: none;
	font-size: 25px;
	font-weight: 600;
	width: 40px;
	text-align: center;
	margin-top: 3px;
	float: left;
	z-index: 7;
}